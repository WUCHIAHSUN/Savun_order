<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvpdName"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCount"
        android:layout_alignBottom="@+id/tvpdName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRice"
        android:textStyle="normal|italic"
        android:layout_alignBaseline="@+id/tvCount"
        android:layout_alignBottom="@+id/tvCount"
        android:layout_toRightOf="@+id/tvCount"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/tvCount" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_delete"
        android:id="@+id/imageButton2"
        android:layout_alignTop="@+id/tvpdName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tvRice"
        android:background="#00000000"/>

</RelativeLayout>